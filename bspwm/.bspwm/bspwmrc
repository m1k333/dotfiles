#!/bin/sh

# Appearance

. ${HOME}/.bspwm/colors

black="#${black}"
red="#${red}"
green="#${green}"
yellow="#${yellow}"
blue="#${blue}"
magenta="#${magenta}"
cyan="#${cyan}"
white="#${white}"

bspc config focused_border_color    ${blue}
bspc config active_border_color     ${blue}
bspc config normal_border_color     ${black}
bspc config presel_border_color     ${yellow}
bspc config urgent_border_color     ${red}

bspc config border_width        2
bspc config window_gap          4
bspc config borderless_monocle  false
bspc config gapless_monocle     false

# Behaviour

bspc config auto_cancel             true
bspc config split_ratio             0.50
bspc config auto_alternate          false
bspc config focus_follows_pointer   false

# Rules

bspc rule -a    Steam floating=on

# Monitors

bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# Keybinding daemon

SXHKD_SHELL=/bin/sh sxhkd -c ${HOME}/.bspwm/sxhkdrc &

# Panel

${HOME}/.bspwm/panel.sh 2> /dev/null &

## EOF
