#!/bin/bash

# Borders
bspc config border_width          1
bspc config focused_frame_opacity 0
bspc config normal_frame_opacity  0
bspc config window_gap            0

# Colours
bspc config focused_border_color         "#F000A0"
bspc config focused_locked_border_color  "#F000A0"
bspc config focused_sticky_border_color  "#F000A0"
bspc config focused_private_border_color "#F000A0"
bspc config active_border_color          "#F000A0"
bspc config active_locked_border_color   "#F000A0"
bspc config active_sticky_border_color   "#F000A0"
bspc config active_private_border_color  "#F000A0"
bspc config normal_border_color          "#0000F0"
bspc config normal_locked_border_color   "#40A0A0"
bspc config normal_sticky_border_color   "#F0F000"
bspc config normal_private_border_color  "#40A0A0"
bspc config presel_border_color          "#00F000"
bspc config urgent_border_color          "#F00000"

# Behaviour
bspc config auto_alternate        true
bspc config auto_cancel           true
bspc config borderless_monocle    true
bspc config focus_follows_pointer true
bspc config gapless_monocle       true
bspc config split_ratio           0.50

# Set up X displays
feh --no-fehbg --bg-tile ~/.bspwm/wallpaper*
xsetroot -cursor_name left_ptr
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# EOF
